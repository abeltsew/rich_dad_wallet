<div class="absolute top-0 right-0 bg-[#3778c2] h-1/5 w-screen flex items-center">
<div class="flex justify-around items-center w-screen text-white">
<svg viewBox="0 0 100 80" width="40" height="40" fill="white">
  <rect width="100" height="10"></rect>
  <rect y="30" width="100" height="10"></rect>
  <rect y="60" width="100" height="10"></rect>
</svg>
<h1 class="text-3xl">BALANCE SHEET</h1>
<svg class="feather feather-search" fill="none" height="24" stroke="currentColor" 
stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" 
width="24" xmlns="http://www.w3.org/2000/svg">
<circle cx="11" cy="11" r="8"/><line x1="21" x2="16.65" y1="21" y2="16.65"/>
</svg>
</div>

</div>
<div class="absolute top-0 right-0 bg-gray-300 h-screen w-screen -z-10"></div>
<ul class="mt-20 w-screen">
<% @balances.each do |balance| %>
    <li class="w-full bg-white flex  justify-around items-center p-3 mb-3"> 
    <img class="h-16 w-16" src=<%= balance.icon %> alt=<%= balance.name %> >
    <div class=" text-gray-400 text-left flex-1 px-4  flex flex-col justify-between gap-1">
    <p class="text-bold text-lg"><%= balance.name.capitalize %> <p>
    <p><%= balance.created_at.strftime('%d-%b-%Y') %> <p>
    </div>
    <p class="text-bold text-xl">$<%= balance.items.map { |item| item.amount }.sum %></p>
    </li>
<% end %>
</ul>